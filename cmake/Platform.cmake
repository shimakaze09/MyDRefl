IF (CMAKE_SYSTEM_NAME MATCHES "Windows" AND "${CMAKE_CXX_COMPILER_ID}" STREQUAL "GNU" AND "${CMAKE_BUILD_TYPE}" STREQUAL "Debug")
    SET(MYDREFL_BUILD_BIG_OBJ FALSE)
ELSE ()
    SET(MYDREFL_BUILD_BIG_OBJ TRUE)
ENDIF ()
MESSAGE(STATUS "MYDREFL_BUILD_BIG_OBJ: ${MYDREFL_BUILD_BIG_OBJ}")

IF (MYDREFL_BUILD_BIG_OBJ)
    SET(MYDREFL_PCH_TARGET_NAME "MyDRefl_pch")
ELSE ()
    SET(MYDREFL_PCH_TARGET_NAME "MyDRefl_core")
ENDIF ()
MESSAGE(STATUS "MYDREFL_PCH_TARGET_NAME: ${MYDREFL_PCH_TARGET_NAME}")